<!DOCTYPE html>
<html lang="en">

<div>
  <%- include('partials/head.ejs', {title: 'ESSENSOR - Productos'})%>
  <link rel="stylesheet" href="css/productsListStyle.css" />
  <link rel="stylesheet" href="css/homeStyle.css" />
  <title>ESSENSOR Productos</title>
</div>

<body>

  <div>
    <%- include('partials/toolbarHeader.ejs')%>
  </div>

  <main>
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Imagen</th>
            <th scope="col">Producto</th>
            <th scope="col">Categoria</th>
            <th scope="col">Descuento (%)</th>
            <th scope="col">Precio </th>
            <th scope="col">Precio con Descuento</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i=0; i<products.length; i++){%>
          <tr>
            <th scope="row"><%=i%></th>
            <td><img class="table-img" src="<%=products[i].product_image%>" alt="product image"></td>
            <td><a href="/productDetail/<%=products[i].product_id%>"><%=products[i].product_name%></a></td>
            <%for(category of categories) {%>
              <%if(category.id == products[i].product_category_id){%>
                <td><%=category.name%></td>
              <%}%>
            <%}%>
            <td><%=products[i].product_discount%></td>
            <td>$ <%=products[i].product_price%></td>
            <%if(products[i].product_discount > 0) {%>
              <td class="text-primary">$ <%=(products[i].product_price) - (products[i].product_discount * products[i].product_price / 100.00)%></td>
            <%} else {%>
              <td >$ <%=(products[i].product_price) - (products[i].product_discount * products[i].product_price / 100.00)%></td>
            <%}%>
          </tr>
          <%}%>
    </tbody>
  </table>
</main>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.5/dist/umd/popper.min.js"
    integrity="sha384-Xe+8cL9oJa6tN/veChSP7q+mnSPaj5Bcu9mPX5F5xIGE0DVittaqT5lorf0EI7Vk" crossorigin="anonymous">
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.min.js"
    integrity="sha384-ODmDIVzN+pFdexxHEHFBQH3/9/vQ9uori45z4JjnFsRydbmQbmL5t1tQ0culUzyK" crossorigin="anonymous">
  </script>

