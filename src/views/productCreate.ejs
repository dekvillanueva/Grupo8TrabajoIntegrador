<!DOCTYPE html>
<html lang="en">
<!--
 ***********   HEAD   **************************************************
-->

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- Bootstrap Font Icon CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />

    <link rel="stylesheet" href="css/manageProductsStyle.css" />
    <title>ESSENSOR Create product</title>
</head>

<!--
 ***********   BODY   *************************************************
-->

<body>
    <!--
 ***********   HEADER   ***********************************************
-->
    <div>
        <%- include('partials/header.ejs')%>
    </div>

    <!--
 ***********   MAIN   ***********************************************
-->
    <main>
        <form action="/productCreate" method="post" enctype="multipart/form-data">
            <div class="main-container">
                <div class="main-container-title">
                    <h2 class="title">Agregar producto</h2>
                </div>

                <div class="main-container-text-inputs">
                    <div class="rounder-container">
                        <label for="productName">Nombre del producto</label>
                        <div class="text-input-with-icon">
                            <% if(!isFromGet && oldData){ %>
                            <input class="form-control" type="text"
                                name="productName" value="<%= oldData.productName %>" id="productName" required />
                            <% } else{ %>
                            <input class="form-control" type="text"
                                name="productName" placeholder="Nombre del producto" id="productName" required />
                            <% } %>
                        </div>
                    </div>
                    <div>
                        <label id="productNameError" style="color: Red;">
                            
                        </label>
                        <%if(!isFromGet && errors && errors.productName){%>
                            <label style="color: Red;">
                            <%= errors.productName.msg %>
                            </label>
                        <%}%>
                    </div>
                </div>

                </div>
                </div>
                <div class="main-container-text-inputs">
                    <div class="rounder-container">
                        <label for="productDescription">Descripción del producto</label>
                        <div>
                            <textarea name="productDescription" class="form-control" id="" cols="30" rows="5"
                                placeholder="Products description">
                </textarea>
                        </div>
                    </div>
                </div>
                <div class="main-container-text-inputs">
                    <div class="rounder-container">
                        <label for="imagen">Imagen</label>
                        <div>
                            <input class="form-control" type="file" name="image" id="imagen" value="Cargar imagen" />
                        </div>
                    </div>

                </div>
                <div class="main-container-text-inputs">
                    <div class="rounder-container">
                        <label for="categoria">Categoría</label>
                        <div>
                            <% if(!isFromGet && oldData){ %>

                        <% } else{ %>
                        <select name="category" class="form-select form-select-sm">
                            <%for(category of categories){%>
                            <option value="<%=category%>">
                                <%=category%>
                            </option>
                            <%}%>
                                                <% } %>
                        </select>
                    </div>
                </div>
            </div>

            <div class="main-container-text-inputs">
                <div class="rounder-container">
                    <label for="precio">Precio</label>
                    <div>
                        <input class="form-control" type="number" min="1" max="999999" name="price" required id="precio"
                            placeholder="$precio" />
                    </div>
                </div>
                <div>
                    <label id="precioError" style="color: Red;">
                        
                    </label>
                    <!-- <%if(!isFromGet && errors && errors.productName){%>
                        <label style="color: Red;">
                        <%= errors.productName.msg %>
                        </label>
                    <%}%> -->
                </div>
            </div>

            <div class="main-container-text-inputs">
                <div class="rounder-container">
                    <label for="descuento">Descuento</label>
                    <div>
                        <select name="discount" class="form-select form-select-sm">
                            <%for(discount of discounts){%>
                            <option value="<%=discount%>">
                                <%=discount%>
                            </option>
                            <%}%>

                            </select>
                        </div>
                    </div>
                </div>

                <div class="main-container-text-inputs-button" style="margin-top: 1rem;">
                    <input type="submit" value="Guardar producto" id="btnGuardar" class="btn btn-primary" />
                </div>
                </div>
            </form>
        </main>

        <!--
 ***********  VALIDATIONS SCRIPTS   **********************************************************
-->
<script src="/js/productCreateValidations.js"></script>
      
        <!--
 ***********   BOOSTRAP SCRIPTS   **********************************************************
-->
      <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.5/dist/umd/popper.min.js"
      integrity="sha384-Xe+8cL9oJa6tN/veChSP7q+mnSPaj5Bcu9mPX5F5xIGE0DVittaqT5lorf0EI7Vk" crossorigin="anonymous">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.min.js"
      integrity="sha384-ODmDIVzN+pFdexxHEHFBQH3/9/vQ9uori45z4JjnFsRydbmQbmL5t1tQ0culUzyK" crossorigin="anonymous">
    </script>


        <!--
 ***********   FOOTER   **********************************************************
-->
        <%- include('partials/footer.ejs')%>

</body>

</html>